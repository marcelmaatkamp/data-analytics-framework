version: '3'

services:

 pandoc:
  image: pandoc/core:2.13
  command: >
   pandoc "$1" \
    -f gfm 
    --include-in-header chapter_break.tex 
    -V linkcolor:blue \
    -V geometry:a4paper \
    -V geometry:margin=2cm \
    -V mainfont="DejaVu Serif" \
    -V monofont="DejaVu Sans Mono" \
    --pdf-engine=xelatex \
    -o "$2"
